<Page x:Class="WPFSample.TutorialExamples.Panels.WrapPanelControl.HorizontalOrientation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSample.TutorialExamples.Panels.WrapPanelControl"
        mc:Ignorable="d"
        Title="Horizontal Orientation"
        Background="LightGray">

    <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Style="{StaticResource GridButton}">Button 1</Button>
        <Button Style="{StaticResource GridButton}">Button 2</Button>
        <Button Style="{StaticResource GridButton}">Button 3</Button>
        <Button Style="{StaticResource GridButton}" Height="80">Button 4</Button>
        <Button Style="{StaticResource GridButton}">Button 5</Button>
        <Button Style="{StaticResource GridButton}">Button 6</Button>
    </WrapPanel>
</Page>