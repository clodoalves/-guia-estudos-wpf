<Page x:Class="WPFSample.TutorialExamples.Panels.GridControl.UniformGrid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFSample.TutorialExamples.Panels.GridControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UniformGrid"
      Background="White">
    <UniformGrid Columns="3" Rows="2" Name="UniformGridSample">
        <Button Style="{StaticResource GridButton}"> Button 1</Button>
        <Button Style="{StaticResource GridButton}"> Button 2</Button>
        <Button Style="{StaticResource GridButton}"> Button 3</Button>
        <Button Style="{StaticResource GridButton}"> Button 4</Button>
        <Button Style="{StaticResource GridButton}"> Button 5</Button>
        <Button Style="{StaticResource GridButton}">Button 6</Button>
    </UniformGrid>
</Page>
