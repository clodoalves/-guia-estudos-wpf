<Window x:Class="WPFSample.App.Views.ProductFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModels="clr-namespace:WPFSample.App.ViewModels"
        mc:Ignorable="d"
        Title="ProductFormWindow" Height="450" Width="800">

    <Window.Resources>
        <ViewModels:ProductFormWindowViewModel x:Key="ProductForm">
            
        </ViewModels:ProductFormWindowViewModel>
        
    </Window.Resources>
   
    <Grid DataContext="{Binding Source={StaticResource ResourceKey=ProductForm}}"
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>-->
        </Grid.RowDefinitions>

        <StackPanel 
            VerticalAlignment="Center"
            Margin="0,0,50,0"
            MaxWidth="400">
            
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="18"></Setter>
                </Style>
                <Style TargetType="TextBox" x:Name="TextBoxStyle">
                    <Setter Property="Margin" Value="0,0,0,10"/>
                    <Setter Property="Height" Value="20"/>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Margin" Value="0,10,0,0"/>
                </Style>
                
            </StackPanel.Resources>

            <TextBlock Text="New Product" FontSize="30"  Margin="0,0,0,20"/>
            
            <TextBlock Text="Description" />
            <TextBox Text="{Binding Description}" />

            <TextBlock Text="Quantity" />
            <TextBox  Text="{Binding Quantity}"/>

            <TextBlock Text="Price"  />
            <TextBox  Text="{Binding Price}"/>

            <Button Content="Save" HorizontalAlignment="Stretch" Command="{Binding AddProduct}"
                    CommandParameter="{Binding}"/>
        </StackPanel>
    </Grid>
</Window>
