<UserControl x:Class="WPFSample.App.Views.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSample.App.Views"
        mc:Ignorable="d"
        Height="750" Width="700" MinHeight="770" MinWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Image Source="{Binding Image}" Style="{StaticResource ImageStyle}"/>
            <TextBlock Style="{StaticResource TextPrice}">
                <Run  Text="R$"/>
                <Run Text="{Binding Price}"/>
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock  Text="{Binding Title}" Style="{StaticResource TextTitle}"/>
            <TextBlock Text="{Binding Description}" Style="{StaticResource TextDescription}"/>
        </StackPanel>
    </Grid>
</UserControl>
